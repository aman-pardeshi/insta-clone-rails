<div class="w-full flex justify-center">

  <div class="w-2/7 px-10 flex flex-col justify-center py-5 border-2">     

    <img alt="insta-logo" src="https://www.instagram.com/static/images/web/logged_out_wordmark.png/7a252de00b20.png" class="w-44 mx-auto my-4"/>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-2 mt-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Phone number, username or email address", class:"placeholder:text-xs w-full" %>
      </div>

      <div class="field mb-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"placeholder:text-xs w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-4">
        <%= f.submit "Log in", class:"p-2 bg-sky-400 text-white w-full rounded-[5px] font-bold" %>
      </div>
    <% end %>

    <div class="flex text-gray-500 items-center">
      <div class="h-[1px] bg-gray-400 w-32"></div>
      <div class="px-4">OR</div>
      <div class="h-[1px] bg-gray-400 w-32"></div>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>




